		driver.findElement(By.xpath("(.//a[@data-dismiss='modal'])[1]")).click();
		System.out.println("going to click on multiple modal");
		
		driver.findElement(By.xpath("(.//a[contains(@class,'btn btn-primary')])[3]")).click();
		try {
			Thread.sleep(10000);
