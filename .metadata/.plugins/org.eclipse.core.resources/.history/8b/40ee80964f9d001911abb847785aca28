		System.out.println("current value is"+current_val);
		System.out.println("final value is"+finalval);
		
		int diff =finalval-current_val_int;
		
		for(int i=0;i<diff;i++)
			
		{
			
			slider1.sendKeys(Keys.ARROW_RIGHT);
			slider2.sendKeys(Keys.ARROW_RIGHT);
			slider3.sendKeys(Keys.ARROW_RIGHT);
			slider4.sendKeys(Keys.ARROW_RIGHT);
			slider5.sendKeys(Keys.ARROW_RIGHT);
			slider6.sendKeys(Keys.ARROW_RIGHT);
			
		}
		
		
		
