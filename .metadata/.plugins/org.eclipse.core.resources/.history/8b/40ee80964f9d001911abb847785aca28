	       action.clickAndHold(slider);
	       
	       action.moveByOffset(40, 0).build().perform();*/
		/*
	       double minValue = Double.parseDouble(slider.getAttribute("min"));
	       double maxValue = Double.parseDouble(slider.getAttribute("max"));
